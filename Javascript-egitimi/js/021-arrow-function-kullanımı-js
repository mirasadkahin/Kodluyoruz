//Arrow function kullanimi
//https://developer.mozilla.org/en-US/docs/Web/JavaScript/Reference/Functions/Arrow_functions
function hello(firstName) {
    console.log(`Merhaba ${firstName}`)
}

hello("JavaScript")

const helloFuncV1 = (firstName) => { console.log(`Merhaba ${firstName}`) }
helloFuncV1("helloFuncV1")

const helloFuncV2 = firstName => console.log(`Merhaba ${firstName}`) //bir parametre, bir donus isleml
helloFuncV2("helloFuncV2")

const helloFuncV3 = (firstName, lastname) => console.log(`Merhaba ${firstName} ${lastname}`)
helloFuncV3("helloFuncV3", "last Name info")

const helloFuncV4 = (firstName, lastname) => {
let info = `Merhaba ${firstName} ${lastname}`
console.log(info)
return info
}
helloFuncV4("helloFuncV4", "Other Ä°nfo")